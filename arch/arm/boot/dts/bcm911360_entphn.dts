/dts-v1/;

#include "bcm-cygnus.dtsi"
#include "dt-bindings/input/input.h"

/ {
	model = "Cygnus Enterprise Phone (BCM911360_ENTPHN)";
	compatible = "brcm,bcm11360", "brcm,cygnus";

	chosen {
		stdout-path = &uart3;
		bootargs = "console=ttyS0,115200";
	};

	gpio_keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		hook {
			label = "HOOK";
			linux,code = <KEY_O>;
			gpios = <&gpio_asiu 48 0>;
		};
	};

	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm 0 50000 0>;
		brightness-levels = <0 16 24 32 50 64 128 255>;
		default-brightness-level = <6>;
		pinctrl-names = "default";
		pinctrl-0 = <&pwm0_pins>;
	};
};

&pinctrl {
	pwm0_pins: pwm0_pins {
		mux {
			function = "pwm0";
			groups = "pwm0_grp";
		};
	};
};

&eth0 {
	status = "okay";
};

&mdio {
	status = "okay";
};

&pwm {
	status = "okay";
};

&switch {
	status = "okay";
};

&v3d {
	assigned-clocks =
		<&mipipll BCM_CYGNUS_MIPIPLL>,
		<&mipipll BCM_CYGNUS_MIPIPLL_CH2_V3D>;
	assigned-clock-rates = <525000000>, <300000000>;
	status = "okay";
};

&uart3 {
	status = "okay";
};

&nand {
	nandcs@1 {
		compatible = "brcm,nandcs";
		reg = <0>;
		nand-on-flash-bbt;

		#address-cells = <1>;
		#size-cells = <1>;

		nand-ecc-strength = <24>;
		nand-ecc-step-size = <1024>;

		brcm,nand-oob-sector-size = <27>;
	};
};

&spi0 {
	num-cs = <1>;
	status = "okay";

	lcd@0 {
		compatible = "wintek,wd-f6448x-eflwc";
		spi-max-frequency = <500000>;
		reg = <0>;
		enable-gpios = <&gpio_asiu 64 0>;
		reset-gpios = <&gpio_asiu 68 0>;
		backlight = <&backlight>;

		port {
			clcd_panel: endpoint {
				remote-endpoint = <&clcd_pads>;
			};
		};
	};
};

&clcd {
	status = "okay";
	port {
		clcd_pads: endpoint {
			remote-endpoint = <&clcd_panel>;
			arm,pl11x,tft-r0g0b0-pads = <0 8 16>;
		};
	};
};
